{
  "compilerOptions": {
    /* -----------------------------
     * Language & runtime target
     * ----------------------------- */
    "target": "ES2020",
    "lib": ["ES2020"],

    /* -----------------------------
     * Module system
     * ----------------------------- */
    "module": "CommonJS",
    "moduleResolution": "Node",

    /* -----------------------------
     * Output
     * ----------------------------- */
    "rootDir": "src",
    "outDir": "dist",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,

    /* -----------------------------
     * Decorators (REQUIRED)
     * ----------------------------- */
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,

    /* -----------------------------
     * Type safety
     * ----------------------------- */
    "strict": true,
    "noImplicitAny": true,

    /* -----------------------------
     * Interop & hygiene
     * ----------------------------- */
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },

  "include": ["src"],

  "exclude": [
    "node_modules",
    "dist",
    "tests",
    "examples"
  ]
}
